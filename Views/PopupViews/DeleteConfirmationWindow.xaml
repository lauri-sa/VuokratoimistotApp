<Window x:Class="Ohtu1Project.Views.DeleteConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ohtu1Project.Views"
        mc:Ignorable="d"
        Title="DeleteConfirmationWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None"
        BorderBrush="Black" BorderThickness="1" Background="#F2EFDF">

    <Canvas Height="100" Width="250">

        <Label Content="Haluatko varmasti poistaa?" Canvas.Left="49" Canvas.Top="24"/>

        <Button Content="OK" FontSize="12" Width="70" Height="20" Canvas.Left="46" Canvas.Top="65" Command="{Binding ConfirmationButtonCommand}"/>
        <Button Content="Peruuta" FontSize="12" Width="70" Height="20" Canvas.Left="132" Canvas.Top="65" Command="{Binding CancelButtonCommand}"/>

    </Canvas>
</Window>
